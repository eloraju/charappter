{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "db:start": "DB_USER=dev DB_PASS=development docker-compose up -d --remove-orphans",
        "db:stop": "docker-compose down",
        "start:dev": "ts-node src/main.ts",
        "test": "jest --verbose"
    },
    "author": "Juuso Elo-Rauta",
    "license": "ISC",
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/convict": "^5.2.2",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.20",
        "@types/joi": "^17.2.3",
        "@types/lodash": "^4.14.168",
        "@types/mongodb": "^3.6.8",
        "@types/mongoose": "^5.10.3",
        "@types/supertest": "^2.0.10",
        "jest": "^26.6.3",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.1",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.1.4"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "convict": "^6.0.0",
        "express": "^4.17.1",
        "joi": "^17.4.0",
        "lodash": "^4.17.20",
        "mongodb": "^3.6.4",
        "mongoose": "^5.11.17"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "ts",
            "tsx"
        ],
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "**/src/**/*.{ts,js}",
            "!**/node_modules/**",
            "!**/build/**",
            "!**/coverage/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "coverageReporters": [
            "text-summary",
            "html",
            "json"
        ],
        "transform": {
            "\\.ts$": "ts-jest"
        },
        "testRegex": "(/tests/.*|(\\.|/)test)\\.(js|ts)?$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/build/",
            "/coverage/",
            ".*/config.ts"
        ]
    }
}
